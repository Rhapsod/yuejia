
<Alloy>
  <Window layout="vertical">
    <View id="header_back" height="128px" backgroundColor="white">
      <View width="100%" height="40px" top="0px"></View>
      <View top="40px" height="80px" width="100%">
        <Label id="style_tab" onClick="style_view_show" height="60px" width="20%" textAlign="center" text="风格" left="50%" color="black" borderColor="#C5C5C5"></Label>
        <Label id="customzie_tab" onClick="customzie_view_show" height="60px" width="20%" textAlign="center" text="样房" right="50%" color="black" borderColor="#C5C5C5"></Label>
        <Button id="back" backgroundImage="/images/utilty/back.png" top="22px" left="22px" width="40px" height="40px"></Button>
        <Button id="other_button" top="22px" right="22px" width="100px" textAlign="left" title="设置" height="40px" color="black"></Button>
        <Button id="other_imageview" top="22px" right="22px" width="40px" height="40px"></Button>
      </View>
      <View onClick="back" height="100%" left="0" width="200px"></View>
      <View onClick="customzie_menu_show" height="100%" right="0" width="200px"></View>
      <View width="100%" height="1px" bottom="0px"></View>
    </View>
    <View bottom="0" top="0">
      <View id="style_view" layout="vertical" bottom="0" top="0">
        <View layout="horizontal" height="88px" backgroundColor="white">
          <Label id="title_01" onClick="show_style_menu_open" width="25%" textAlign="center" color="black" text="风格"></Label>
          <Label id="title_02" onClick="show_style_menu_close" width="25%" textAlign="center" color="black" text="空间"></Label>
          <Label id="title_03" onClick="show_style_menu_open" width="25%" textAlign="center" color="black" text="局部"></Label>
          <Label id="title_04" onClick="show_style_menu_close" width="25%" textAlign="center" color="black" text="颜色"></Label>
        </View>
        <View bottom="0">
          <View id="style_detail" height="100%" width="100%">
            <ImageView image="/images/customize/style_detail.png" width="100%" height="100%"></ImageView>
          </View>
          <View id="style_menu" height="100%" width="100%">
            <ImageView image="/images/customize/style_menu.png" width="100%" height="100%"></ImageView>
          </View>
        </View>
      </View>
      <View id="customize_view" bottom="0" top="0" backgroundColor="blue">
        <View id="customize_image_menu" bottom="0" top="0" width="100%" backgroundColor="gray">
          <ImageView image="/images/customize/customize_menu.png" width="100%" height="100%"></ImageView>
        </View>
        <View id="customize_image_detail" bottom="0" top="0" width="100%" backgroundColor="red">
          <ImageView image="/images/customize/customize_detail.png" width="100%" height="100%"></ImageView>
        </View>
      </View>
    </View>
  </Window>
</Alloy>
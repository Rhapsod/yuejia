
<Alloy>
  <Window layout="vertical">
    <View id="header_back" height="128px" backgroundColor="white">
      <View width="100%" height="40px" top="0px"></View>
      <View width="100%" height="88px" top="40px">
        <Label id="title" width="100%" height="88px" textAlign="Titanium.UI.TEXT_ALIGNMENT_CENTER" color="black"></Label>
        <ImageView id="back" image="/images/utilty/back.png" left="22px" width="40px" height="50px" top="22px"></ImageView>
        <Button id="other_button" right="22px" width="100px" height="40px" textAlign="left" color="black" top="22px"></Button>
        <ImageView id="other_imageview" top="22px" right="22px" width="40px" height="40px"></ImageView>
      </View>
      <View onClick="back" left="0" width="200px" height="100%"></View>
      <View id="other_click" height="100%" right="0" width="200px"></View>
      <View width="100%" height="1px" bottom="0px"></View>
    </View>
    <View layout="vertical" bottom="0">
      <ImageView onClick="to_user_info_view" image="/images/setting/head_icon.png" width="100%" height="15%"></ImageView>
      <ImageView image="/images/setting/other.png" width="100%" height="85%"></ImageView>
    </View>
  </Window>
</Alloy>
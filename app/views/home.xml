<Alloy>
  <Window>
    <View layout="vertical">
      <View id="header" layout="vertical" height="128px">
        <View width="100%" height="40px" backgroundColor="white"></View>
        <View>
          <Label id="title" height="88px" width="100%" text="我的服务" textAlign="Titanium.UI.TEXT_ALIGNMENT_CENTER" backgroundColor="white"></Label>
          <View id="head_icon" height="88px" borderRadius="50" left="0" width="88px" backgroundColor="red">
            <ImageView image="/images/header/head.png" center="true" width="80%"></ImageView>
          </View>
        </View>
      </View>
      <View height="910px">
        <View id="require" layout="vertical" backgroundColor="green">
          <ImageView id="require_image" image="/images/require/require_image.png" width="100%" height="100%"></ImageView>
        </View>
        <View id="service" layout="vertical">
          <View height="30%" width="100%">
            <ImageView image="/images/service/service_scroll.png" height="100%" width="100%"></ImageView>
          </View>
          <View height="60%" layout="vertical">
            <View height="50%" layout="horizontal">
              <View layout="vertical" width="50%" center="center" borderColor="gray" borderWidth="0.3">
                <ImageView image="/images/service/customize.png" width="50%" center="center" top="20%"></ImageView>
                <Label title="装修定制"></Label>
              </View>
              <View layout="vertical" width="50%" center="center" borderColor="gray" borderWidth="0.3">
                <ImageView image="/images/service/design.png" width="50%" center="center" top="20%"></ImageView>
                <Label title="专业设计"></Label>
              </View>
            </View>
            <View height="50%" layout="horizontal">
              <View layout="vertical" width="50%" center="center" borderColor="gray" borderWidth="0.3">
                <Image image="/images/service/worker.png" width="50%" center="center" top="20%"></Image>
                <Label title="装修工人"></Label>
              </View>
              <View layout="vertical" width="50%" center="center" borderColor="gray" borderWidth="0.3">
                <Image image="/images/service/manager.png" width="50%" center="center" top="20%"></Image>
                <Label title="我的管家"></Label>
              </View>
            </View>
          </View>
        </View>
        <View id="progress" layout="vertical">
          <View layout="horizontal" height="88px" borderColor="#C5C5C5" borderWidth="2px">
            <Button id="progress_fitment_button" onClick="show_progress_fitment" title="装修进度" left="0" width="212px" height="100%"></Button>
            <Button width="2px" height="100%" backgroundColor="#C5C5C5"></Button>
            <Button id="progress_construct_button" onClick="show_progress_construct" title="施工进度" width="212px" height="100%"></Button>
            <Button width="2px" height="100%" backgroundColor="#C5C5C5"></Button>
            <Button id="progress_actualize_button" onClick="show_progress_actualize" title="实时进度" width="212px" height="100%"></Button>
          </View>
          <View height="822px">
            <View id="progress_fitment" width="100%" heght="100%">
              <ImageView image="/images/progress/fitment_detail.jpg" height="100%" top="0" width="100%"></ImageView>
            </View>
            <View id="progress_construct" layout="vertical" width="100%" heght="100%">
              <ImageView image="/images/progress/actualize_house_info.jpg" height="20%" top="0" width="100%"></ImageView>
              <ImageView image="/images/progress/construct_detail.jpg" height="80%" width="100%"></ImageView>
            </View>
            <View id="progress_actualize" layout="vertical" width="100%" heght="100%">
              <ImageView image="/images/progress/actualize_house_info.jpg" height="20%" top="0" width="100%"></ImageView>
              <ImageView image="/images/progress/actualize_detail.jpg" height="80%" width="100%"></ImageView>
            </View>
          </View>
        </View>
        <View id="discover" layout="vertical" height="910px">
          <View layout="vertical" height="100%">
            <ImageView onClick="discover_pirture" image="/images/discover/discover_pirture.png" height="50%" top="0" width="100%"></ImageView>
            <ImageView onClick="discover_skill" image="/images/discover/discover_skill.png" height="50%" width="100%"></ImageView>
          </View>
        </View>
      </View>
      <View id="footer" layout="vertical" height="98px">
        <View layout="horizontal" backgroundColor="white">
          <ImageView id="require_button" onClick="show_require" height="100%" left="0" width="25%"></ImageView>
          <ImageView id="service_button" onClick="show_service" height="100%" width="25%"></ImageView>
          <ImageView id="progress_button" onClick="show_progress" height="100%" width="25%"></ImageView>
          <ImageView id="discover_button" onClick="show_discover" height="100%" width="25%"></ImageView>
        </View>
      </View>
    </View>
  </Window>
</Alloy>


<Alloy>
  <Window>
    <View layout="vertical">
      <View id="header" layout="vertical" height="10%">
        <View>
          <ImageView id="head" image="/images/header/head.png" height="100%" left="0" width="20%"></ImageView>
          <Label id="title" height="100%" width="100%" text="我的服务" textAlign="Titanium.UI.TEXT_ALIGNMENT_CENTER" backgroundColor="white"></Label>
        </View>
      </View>
      <View height="80%">
        <View id="require" layout="vertical" backgroundColor="white">
          <ImageView id="require_image" image="/images/require/require_image.png" width="100%" height="100%"></ImageView>
        </View>
        <View id="service" layout="vertical" backgroundColor="gray"></View>
        <View id="progress" layout="vertical">
          <View layout="horizontal" height="10%">
            <ImageView id="imageView_1" image="/images/progess/fitment_progess.jpg" width="33%" height="100%"></ImageView>
            <ImageView id="imageView_2" image="/images/progess/construct_progess.jpg" width="33%" height="100%"></ImageView>
            <ImageView id="imageView_3" image="/images/progess/actualize_progess.png" width="33.9%" height="100%"></ImageView>
          </View>
          <View height="90%">
            <View id="view_01" width="100%" heght="100%">
              <ImageView id="imageView_4" image="/images/progess/construct_progess.jpg" height="100%" top="0" width="100%"></ImageView>
            </View>
            <View id="view_02" layout="vertical" width="100%" heght="100%">
              <ImageView id="imageView_5" image="/images/progess/actualize_house_info.jpg" height="20%" top="0" width="100%"></ImageView>
              <ImageView id="imageView_6" image="/images/progess/construct_detail.jpg" height="80%"></ImageView>
            </View>
            <View id="view_03" layout="vertical" width="100%" heght="100%">
              <ImageView id="imageView_7" image="/images/progess/actualize_house_info.jpg" height="20%" top="0" width="100%"></ImageView>
              <ImageView id="imageView_8" image="/images/progess/actualize_detail.jpg" height="100%"></ImageView>
            </View>
          </View>
        </View>
        <View id="discover" layout="vertical" backgroundColor="red"></View>
      </View>
      <View id="footer" layout="vertical" height="10%">
        <View layout="horizontal">
          <ImageView id="require_button" onClick="show_require" image="/images/footer/btn_require.png" height="100%" left="0" width="25%"></ImageView>
          <ImageView id="service_button" onClick="show_service" image="/images/footer/btn_service.png" height="100%" width="25%"></ImageView>
          <ImageView id="progress_button" onClick="show_progress" image="/images/footer/btn_progress.png" height="100%" width="25%"></ImageView>
          <ImageView id="discover_button" onClick="show_discover" image="/images/footer/btn_discover.png" height="100%" width="25%"></ImageView>
        </View>
      </View>
    </View>
  </Window>
</Alloy>